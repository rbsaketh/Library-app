<label>Title</label>
<input type="text" name="title" value="<%= book.title %>">

<label>Author</label>
<select name="author">
    <% authors.forEach(author => { %>
        <option value="<%= author.id %>" <%= author.id === book.author ? 'selected' : '' %>><%= author.name %></option>
    <% }) %>
</select>

<label>Publish Date</label>
<input type="date" name="publishDate" value="<%= book.publishDate ? book.publishDate.toISOString().split('T')[0] : '' %>">

<label>Page Count</label>
<input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">

<label>Cover</label>
<input type="file" name="cover">

<label>Description</label>
<textarea name="description"><%= book.description %></textarea>
